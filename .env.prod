# ===========================================
# Production Environment Configuration
# ===========================================
# This file is used by Docker Compose production services
# IMPORTANT: Change credentials for real production deployments!

# -------------------------
# Server Configuration
# -------------------------
NODE_ENV=production
PORT=3000

# -------------------------
# Self-Hosted S3 (MinIO)
# IMPORTANT: Use 'minio' (docker service name) NOT 'localhost'
# CHANGE THESE CREDENTIALS FOR PRODUCTION!
# -------------------------
S3_REGION=us-east-1
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=downloads
S3_FORCE_PATH_STYLE=true

# -------------------------
# Redis (for Queue / BullMQ)
# IMPORTANT: Use 'redis' (docker service name) NOT 'localhost'
# -------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------
# Observability (optional)
# -------------------------
SENTRY_DSN=

# -------------------------
# Rate Limiting
# -------------------------
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------
# CORS
# -------------------------
CORS_ORIGINS=*

# -------------------------
# Simulated Delay (Production values)
# -------------------------
DOWNLOAD_DELAY_ENABLED=true
DOWNLOAD_DELAY_MIN_MS=10000
DOWNLOAD_DELAY_MAX_MS=200000
